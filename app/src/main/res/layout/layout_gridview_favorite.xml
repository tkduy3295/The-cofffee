<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/highlight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="5dp">


        <ImageView
            android:id="@+id/imageFavorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tvNameFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÊN MÓN"
                android:textColor="?attr/colorPrimary"
                android:textSize="26dp"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <Button
                android:id="@+id/btnQuatityFavorite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/buttonquality"
                android:textColor="#757575"
                android:clickable = "false"
                android:layout_gravity="right"
                />
            <!--android:visibility="gone"-->


            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconFavorite"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_favorite"
                        android:tint="@color/red"
                        android:layout_marginTop="5px"
                        />
                    <TextView
                        android:id="@+id/tvTotalFavorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16dp"
                        android:layout_marginLeft="8px"
                        />

                </LinearLayout>


                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvPriceFavorite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="35.000 VND"
                    android:textSize="16dp"
                    android:gravity="right"

                    />
            </LinearLayout>

            <!--<View
